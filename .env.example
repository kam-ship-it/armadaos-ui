# ArmadaOS God Mode API Configuration
# Copy this file to .env.local and configure for your environment

# API Base URL
# Local: http://localhost:8000/api/v1
# Staging: https://api-staging.armadaos.com/api/v1
# Production: https://api.armadaos.com/api/v1
VITE_API_BASE_URL=http://localhost:8000/api/v1

# API Timeout (ms)
VITE_API_TIMEOUT=30000

# Retry Configuration
VITE_API_MAX_RETRIES=3
VITE_API_RETRY_DELAY=1000

# Feature Flags
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_ERROR_REPORTING=false

# Nexus Configuration
VITE_NEXUS_STREAM_ENABLED=true
VITE_NEXUS_TYPING_DELAY=20
